


<div class="bg-light p-5 rounded-lg m-3">
  
  <h1 class="display-4"><%= @job.job_title %></h1>
  <p class="lead">Company: <%= @job.company_name %> </p>
  <p class="lead">Applied on <%= @job.date_applied %></p>
  <p class="lead">Status: <%= @job.status %></p>
  <hr class="my-4">
  <%= link_to "Edit", edit_job_path(@job), class:"btn btn-primary" %> 
  <%= link_to "Back", jobs_path, class:"btn btn-secondary" %>
  <%= link_to 'Delete', @job, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger " %>

  
</div>


